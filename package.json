{
  "name": "guitar-ai-pro",
  "version": "0.1.0",
  "description": "Editor de tablatura com IA integrada - Clone open-source do Guitar Pro",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "react-scripts start",
    "start:electron": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "build": "react-scripts build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win --dir",
    "build:win-installer": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "package:win": "cd dist && zip -r \"Guitar-AI-Pro-$(node -p \"require('../package.json').version\")-win-portable.zip\" win-unpacked/",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@magenta/music": "^1.23.1",
    "@tensorflow/tfjs": "^4.11.0",
    "howler": "^2.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vexflow": "^4.2.3"
  },
  "resolutions": {
    "tone": "13.8.25"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.guitaraipro.app",
    "productName": "Guitar AI Pro",
    "files": [
      "electron/**/*",
      "!electron/main.js.map",
      "!build/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": "AppImage",
      "category": "Audio"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
