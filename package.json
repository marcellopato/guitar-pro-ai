{
  "name": "guitar-ai-pro",
  "version": "0.1.0",
  "description": "Editor de tablatura com IA integrada - Clone open-source do Guitar Pro",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "react-scripts start",
    "start:electron": "electron .",
    "build": "react-scripts build",
    "build:electron": "electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@magenta/music": "^1.23.1",
    "@tensorflow/tfjs": "^4.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tone": "^14.7.77",
    "vexflow": "^4.2.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.guitaraipro.app",
    "productName": "Guitar AI Pro",
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Audio"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
